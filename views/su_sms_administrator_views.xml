<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Administrator Form -->
    <record id="su_sms_administrator_view_form" model="ir.ui.view">
        <field name="name">su.sms.administrator.form</field>
        <field name="model">su.sms.administrator</field>
        <field name="arch" type="xml">
            <form string="SMS Administrator">
                <sheet>
                    <group>
                        <group string="User">
                            <field name="user_id" required="1"/>
                            <field name="name" readonly="1"/>
                            <field name="email" readonly="1"/>
                            <field name="phone"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Access">
                            <field name="department_id" required="1"/>
                            <field name="role" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Administrator List -->
    <record id="su_sms_administrator_view_list" model="ir.ui.view">
        <field name="name">su.sms.administrator.list</field>
        <field name="model">su.sms.administrator</field>
        <field name="arch" type="xml">
            <list string="SMS Administrators" editable="bottom">
                <field name="name" readonly="1"/>
                <field name="login" readonly="1"/>
                <field name="department_id"/>
                <field name="role"/>
                <field name="phone"/>
                <field name="active" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Administrator Search -->
    <record id="su_sms_administrator_view_search" model="ir.ui.view">
        <field name="name">su.sms.administrator.search</field>
        <field name="model">su.sms.administrator</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="login"/>
                <field name="department_id"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="disabled" string="Disabled" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_dept" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_role" string="Role"
                            context="{'group_by': 'role'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_su_sms_administrator" model="ir.actions.act_window">
        <field name="name">SMS Administrators</field>
        <field name="res_model">su.sms.administrator</field>
        <field name="view_mode">list,form</field>
        <field name="groups_id" eval="[(4, ref('su_sms_integrated.group_su_sms_manager'))]"/>
    </record>
</odoo>
