<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="su_sms_account_manage_view_form" model="ir.ui.view">
        <field name="name">su.sms.account.manage.form</field>
        <field name="model">su.sms.account.manage</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Africa's Talking SMS Configuration">
                <field name="company_id" invisible="1"/>
                <group string="Provider">
                    <field name="sms_provider" widget="radio"
                           options="{'horizontal': true}" required="1"/>
                    <field name="at_environment" invisible="sms_provider != 'africas_talking'"/>
                </group>
                <group string="Africa's Talking Credentials"
                       invisible="sms_provider != 'africas_talking'">
                    <label for="at_username"/>
                    <div class="d-flex align-items-center">
                        <field name="at_username" placeholder="e.g. Strathmore or sandbox"/>
                        <a href="https://account.africastalking.com/" target="_blank"
                           class="btn btn-link ms-2">
                            AT Dashboard <i class="fa fa-external-link"/>
                        </a>
                    </div>
                    <field name="at_api_key" password="True" placeholder="API Key from AT dashboard"/>
                    <field name="at_sender_id" placeholder="STRATHU"/>
                    <label for="test_number"/>
                    <div class="d-flex align-items-center">
                        <field name="test_number" placeholder="+254727374660"/>
                        <button name="action_send_test" string="Send Test SMS"
                                icon="fa-paper-plane" type="object"
                                class="btn btn-link ms-2"/>
                    </div>
                </group>
                <group invisible="sms_provider != 'africas_talking'">
                    <div class="col-12">
                        <button name="action_check_balance" string="Check AT Balance"
                                icon="fa-credit-card" type="object"
                                class="btn btn-secondary"/>
                    </div>
                </group>
                <footer>
                    <button string="Save" type="object" name="action_save"
                            class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" class="btn-secondary"
                            special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
